@page
@using Microsoft.AspNetCore.Authorization
@using SD.ProjectName.WebApp.Identity
@attribute [Authorize(Roles = AccountTypes.Admin)]
@model SD.ProjectName.WebApp.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin dashboard";
}

<h1 class="display-6">Admin dashboard</h1>
<p class="lead">Manage the marketplace configuration and monitor platform activity.</p>

<div class="alert alert-warning">
    You are signed in with administrator privileges. Changes here affect all buyers and sellers.
</div>

<div class="card my-3">
    <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
        <span class="fw-semibold">Returns &amp; complaints SLA</span>
        <form class="row g-2 align-items-end" method="get">
            <div class="col-auto">
                <label class="form-label form-label-sm fw-semibold" for="fromDate">From</label>
                <input id="fromDate" class="form-control form-control-sm" type="date" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-auto">
                <label class="form-label form-label-sm fw-semibold" for="toDate">To</label>
                <input id="toDate" class="form-control form-control-sm" type="date" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-sm btn-primary">Refresh</button>
                <a class="btn btn-sm btn-link text-decoration-none" asp-page="/Admin/Dashboard">Reset</a>
            </div>
        </form>
    </div>
    <div class="card-body">
        @if (Model.SlaMetrics.Count == 0)
        {
            <div class="text-muted small">No cases match this period.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th scope="col">Seller</th>
                            <th scope="col">Total cases</th>
                            <th scope="col">Resolved</th>
                            <th scope="col">Resolved within SLA</th>
                            <th scope="col">Avg first response</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var metric in Model.SlaMetrics)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@metric.SellerName</div>
                                    <div class="text-muted small">@metric.SellerId</div>
                                </td>
                                <td>@metric.TotalCases</td>
                                <td>@metric.ResolvedCases</td>
                                <td>
                                    <div class="fw-semibold">@metric.ResolvedWithinSla</div>
                                    <div class="text-muted small">@metric.ResolutionSlaRate.ToString("0.0")% within SLA</div>
                                </td>
                                <td>
                                    @if (metric.AverageFirstResponseTime.HasValue)
                                    {
                                        var avgHours = Math.Round(metric.AverageFirstResponseTime.Value.TotalHours, 1);
                                        <span>@avgHours hrs</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No responses yet</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="list-group mt-3">
    <a class="list-group-item list-group-item-action" asp-page="Cases/Index">
        Returns &amp; disputes
    </a>
    <a class="list-group-item list-group-item-action" asp-page="Categories">
        Manage product categories
    </a>
    <a class="list-group-item list-group-item-action" asp-page="Settlements">
        Monthly settlements
    </a>
</div>
