@page "/Admin/Settlements"
@model SD.ProjectName.WebApp.Pages.Admin.SettlementsModel
@{
    ViewData["Title"] = "Monthly settlements";
}

<h1 class="mb-2">Monthly settlements</h1>
<p class="text-muted">Review per-seller settlements for the selected period. Payout alignment uses escrow history while keeping settlements independent.</p>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row gy-3 align-items-end">
            <div class="col-sm-2">
                <label for="yearInput" class="form-label">Year</label>
                <input id="yearInput" name="Year" type="number" min="2000" max="2100" value="@Model.Year" class="form-control" />
            </div>
            <div class="col-sm-2">
                <label for="monthInput" class="form-label">Month</label>
                <input id="monthInput" name="Month" type="number" min="1" max="12" value="@Model.Month" class="form-control" />
            </div>
            <div class="col-sm-4">
                <label for="sellerInput" class="form-label">Seller (optional)</label>
                <input id="sellerInput" name="SellerId" value="@Model.SellerId" class="form-control" placeholder="Seller id to drill into" />
            </div>
            <div class="col-sm-4 text-sm-end">
                <button type="submit" class="btn btn-primary me-2">Apply</button>
                <a class="btn btn-outline-secondary"
                   asp-page-handler="Export"
                   asp-route-year="@Model.Year"
                   asp-route-month="@Model.Month"
                   asp-route-sellerId="@Model.SellerId">Export CSV</a>
            </div>
        </form>
        <div class="small text-muted mt-2">
            Period: @Model.PeriodStart.ToLocalTime():d &ndash; @Model.PeriodEnd.ToLocalTime():d (closing day @Model.PeriodEnd.Day, time zone @Model.PeriodEnd.Offset)
        </div>
    </div>
</div>

@if (Model.Summaries.Count == 0)
{
    <div class="alert alert-info">No settlements found for the selected period.</div>
}
else
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>Seller totals</div>
            <div class="text-muted small">Adjustments are orders from earlier months settled in this window.</div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Seller</th>
                        <th class="text-end">Orders</th>
                        <th class="text-end">Gross</th>
                        <th class="text-end">Commission</th>
                        <th class="text-end">Payout</th>
                        <th class="text-end">Adjustments</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var summary in Model.Summaries)
                    {
                        <tr>
                            <td>@summary.SellerName</td>
                            <td class="text-end">@summary.OrderCount</td>
                            <td class="text-end">@summary.GrossTotal.ToString("C")</td>
                            <td class="text-end text-muted">@summary.CommissionTotal.ToString("C")</td>
                            <td class="text-end fw-semibold">@summary.PayoutTotal.ToString("C")</td>
                            <td class="text-end">
                                @if (summary.AdjustmentCount > 0)
                                {
                                    <span class="badge bg-warning text-dark">@summary.AdjustmentCount adjustment@(summary.AdjustmentCount == 1 ? "" : "s")</span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-page="/Admin/Settlements"
                                   asp-route-year="@Model.Year"
                                   asp-route-month="@Model.Month"
                                   asp-route-sellerId="@summary.SellerId">View orders</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (Model.Detail != null)
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <div class="fw-semibold">Orders for @Model.Detail.Summary.SellerName</div>
                <div class="small text-muted">Payout window @Model.Detail.Summary.PeriodStart.ToLocalTime():d â€“ @Model.Detail.Summary.PeriodEnd.ToLocalTime():d</div>
            </div>
            <a class="btn btn-sm btn-outline-secondary"
               asp-page-handler="Export"
               asp-route-year="@Model.Year"
               asp-route-month="@Model.Month"
               asp-route-sellerId="@Model.Detail.Summary.SellerId">Export seller CSV</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-sm mb-0">
                <thead>
                    <tr>
                        <th>Order</th>
                        <th>Payout on</th>
                        <th>Created</th>
                        <th class="text-end">Gross</th>
                        <th class="text-end">Commission</th>
                        <th class="text-end">Payout</th>
                        <th>Status</th>
                        <th>Flags</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Detail.Orders.Count == 0)
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">No orders settled in this window for the selected seller.</td>
                    </tr>
                }
                else
                {
                    foreach (var order in Model.Detail.Orders)
                    {
                        <tr>
                            <td>
                                <div class="fw-semibold">@order.OrderNumber</div>
                                <div class="small text-muted">Sub-order @order.SubOrderNumber</div>
                            </td>
                            <td>@order.PayoutOn.ToLocalTime().ToString("g")</td>
                            <td class="text-muted">@order.CreatedOn.ToLocalTime().ToString("g")</td>
                            <td class="text-end">@order.GrossTotal.ToString("C")</td>
                            <td class="text-end text-muted">@order.CommissionTotal.ToString("C")</td>
                            <td class="text-end fw-semibold">@order.PayoutTotal.ToString("C")</td>
                            <td>@order.PayoutStatus</td>
                            <td>
                                @if (order.IsAdjustment)
                                {
                                    <span class="badge bg-warning text-dark">Prior period adjustment</span>
                                }
                                else
                                {
                                    <span class="text-muted">Current period</span>
                                }
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
}
