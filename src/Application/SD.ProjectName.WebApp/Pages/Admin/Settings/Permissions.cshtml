@page
@using SD.ProjectName.WebApp.Identity
@model SD.ProjectName.WebApp.Pages.Admin.Settings.PermissionsModel
@{
    ViewData["Title"] = "Role-based access control";
}

<h1 class="display-6">Role-based access control</h1>
<p class="text-muted">
    Review platform roles and their permissions. Changes take effect on the next authorization check and apply to all users in the role.
</p>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="row g-3">
    <div class="col-lg-7">
        <div class="card shadow-sm h-100">
            <div class="card-header fw-semibold">Current role configuration</div>
            <div class="list-group list-group-flush">
                @foreach (var role in Model.RolePermissions)
                {
                    var displayName = role.Role;
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="fw-semibold">@displayName</div>
                            <span class="badge text-bg-secondary">@role.Permissions.Count</span>
                        </div>
                        <div class="text-muted small mb-2">
                            Modules: @(role.Modules.Count == 0 ? "None" : string.Join(", ", role.Modules))
                        </div>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var permission in role.Permissions.OrderBy(p => p))
                            {
                                var definition = Model.PermissionCatalog.FirstOrDefault(p => p.Name.Equals(permission, StringComparison.OrdinalIgnoreCase));
                                <span class="badge text-bg-light">
                                    @(definition?.DisplayName ?? permission)
                                    <span class="text-muted">(@(definition?.Module ?? "Custom"))</span>
                                </span>
                            }
                            @if (role.Permissions.Count == 0)
                            {
                                <span class="text-muted small">No permissions assigned.</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Assign or revoke permissions</div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="SelectedRole" class="form-label">Role</label>
                        <select asp-for="SelectedRole" class="form-select">
                            <option value="">Choose a role</option>
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedRole" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SelectedPermission" class="form-label">Permission</label>
                        <select asp-for="SelectedPermission" class="form-select">
                            <option value="">Choose a permission</option>
                            @foreach (var permission in Model.PermissionCatalog)
                            {
                                <option value="@permission.Name">@permission.DisplayName (@permission.Module)</option>
                            }
                        </select>
                        <span asp-validation-for="SelectedPermission" class="text-danger small"></span>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" formaction="?handler=Grant">Grant</button>
                        <button type="submit" class="btn btn-outline-danger" formaction="?handler=Revoke">Revoke</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
