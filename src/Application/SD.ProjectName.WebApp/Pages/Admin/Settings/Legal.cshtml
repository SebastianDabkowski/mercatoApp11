@page
@model SD.ProjectName.WebApp.Pages.Admin.Settings.LegalModel
@{
    ViewData["Title"] = "Legal content";
    var selectedType = Model.Input.DocumentType;
    var title = SD.ProjectName.WebApp.Services.LegalDocumentTypes.GetDisplayName(selectedType);
}

<h1 class="display-6">Legal content management</h1>
<p class="text-muted">Manage effective-dated versions for terms, privacy, cookies, and seller agreements.</p>

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

<div class="row g-4">
    <div class="col-lg-7">
        <div class="card shadow-sm mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <div class="fw-semibold">@title</div>
                    <div class="text-muted small">Current and upcoming versions</div>
                </div>
                <form method="get" class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0 small text-muted" for="doc-type">Document</label>
                    <select id="doc-type" name="type" class="form-select form-select-sm" onchange="this.form.submit()">
                        @foreach (var type in Model.DocumentTypes)
                        {
                            <option value="@type" selected="@(string.Equals(type, selectedType, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                                @SD.ProjectName.WebApp.Services.LegalDocumentTypes.GetDisplayName(type)
                            </option>
                        }
                    </select>
                </form>
            </div>
            <div class="card-body">
                @if (Model.ActiveVersion == null)
                {
                    <div class="alert alert-warning mb-0">No active version configured.</div>
                }
                else
                {
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="fw-semibold">Active: @Model.ActiveVersion.VersionTag</div>
                            <div class="text-muted small">Effective @Model.ActiveVersion.EffectiveFrom.ToString("yyyy-MM-dd")</div>
                            @if (!string.IsNullOrWhiteSpace(Model.ActiveVersion.Title))
                            {
                                <div class="text-muted small">@Model.ActiveVersion.Title</div>
                            }
                        </div>
                        <a class="btn btn-sm btn-outline-primary" asp-page="/Admin/Settings/Legal" asp-route-type="@selectedType" asp-route-id="@Model.ActiveVersion.Id">Edit</a>
                    </div>
                    <div class="mt-3 border rounded p-3 bg-light" style="max-height: 260px; overflow: auto;">
                        @Html.Raw(Model.ActiveVersion.Content)
                    </div>
                }

                @if (Model.UpcomingVersion != null)
                {
                    <div class="alert alert-info mt-3 mb-0">
                        Upcoming version <strong>@Model.UpcomingVersion.VersionTag</strong> takes effect on @Model.UpcomingVersion.EffectiveFrom.ToString("yyyy-MM-dd").
                    </div>
                }
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <div class="fw-semibold">Version history</div>
                <div class="text-muted small">Newest first</div>
            </div>
            <div class="table-responsive">
                <table class="table table-sm mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Version</th>
                            <th>Title</th>
                            <th>Effective</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Versions.Count == 0)
                    {
                        <tr><td colspan="4" class="text-muted text-center py-3">No versions yet.</td></tr>
                    }
                    else
                    {
                        @foreach (var version in Model.Versions)
                        {
                            <tr class="@(version.EffectiveFrom > DateTimeOffset.UtcNow ? "table-warning" : string.Empty)">
                                <td>@version.VersionTag</td>
                                <td>@(string.IsNullOrWhiteSpace(version.Title) ? "-" : version.Title)</td>
                                <td>@version.EffectiveFrom.ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-link" asp-page="/Admin/Settings/Legal" asp-route-type="@version.DocumentType" asp-route-id="@version.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header">
                <div class="fw-semibold">@((Model.Input.Id.HasValue ? "Edit" : "Create") + " version")</div>
                <div class="text-muted small">Save a new version with a future effective date to schedule changes.</div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Input.Id" />
                    <div class="mb-3">
                        <label asp-for="Input.DocumentType" class="form-label"></label>
                        <select asp-for="Input.DocumentType" class="form-select">
                            @foreach (var type in Model.DocumentTypes)
                            {
                                <option value="@type">@SD.ProjectName.WebApp.Services.LegalDocumentTypes.GetDisplayName(type)</option>
                            }
                        </select>
                        <span asp-validation-for="Input.DocumentType" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.VersionTag" class="form-label"></label>
                        <input asp-for="Input.VersionTag" class="form-control" placeholder="Optional (auto-generated if empty)" />
                        <span asp-validation-for="Input.VersionTag" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label"></label>
                        <input asp-for="Input.Title" class="form-control" placeholder="Optional display title" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.EffectiveFrom" class="form-label"></label>
                        <input asp-for="Input.EffectiveFrom" class="form-control" type="date" />
                        <span asp-validation-for="Input.EffectiveFrom" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.Content" class="form-label"></label>
                        <textarea asp-for="Input.Content" class="form-control" rows="10" placeholder="HTML supported"></textarea>
                        <span asp-validation-for="Input.Content" class="text-danger"></span>
                    </div>
                    @if (Model.Errors.Count > 0)
                    {
                        <div class="alert alert-warning">
                            <ul class="mb-0">
                                @foreach (var err in Model.Errors)
                                {
                                    <li>@err</li>
                                }
                            </ul>
                        </div>
                    }
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save version</button>
                        <a class="btn btn-outline-secondary" asp-page="/Admin/Settings/Legal" asp-route-type="@selectedType">Reset</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
