@page
@model SD.ProjectName.WebApp.Pages.Seller.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex flex-wrap justify-content-between align-items-start gap-2">
    <div>
        <h1 class="mb-1">Orders</h1>
        <p class="text-muted mb-0">Each entry represents your sub-order for a buyerâ€™s purchase.</p>
    </div>
    <form method="get" asp-page-handler="Export" class="d-flex align-items-start gap-2">
        @foreach (var status in Model.StatusFilters)
        {
            <input type="hidden" name="status" value="@status" />
        }
        @if (Model.FromDate.HasValue)
        {
            <input type="hidden" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
        }
        @if (Model.ToDate.HasValue)
        {
            <input type="hidden" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
        }
        @if (!string.IsNullOrWhiteSpace(Model.Buyer))
        {
            <input type="hidden" name="Buyer" value="@Model.Buyer" />
        }
        @if (Model.MissingTrackingOnly)
        {
            <input type="hidden" name="MissingTrackingOnly" value="true" />
        }
        <button type="submit" class="btn btn-outline-secondary">Export CSV</button>
    </form>
</div>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success mt-3">@statusMessage</div>
}
@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-warning mt-3">@errorMessage</div>
}

<div class="card mb-3 mt-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12">
                <label class="form-label fw-semibold d-block">Status</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var status in Model.AvailableStatuses)
                    {
                        var inputId = $"status-{status.ToLower()}";
                        var isChecked = Model.StatusFilters.Any(s => s.Equals(status, StringComparison.OrdinalIgnoreCase));
                        <div class="form-check me-2">
                            <input class="form-check-input" type="checkbox" name="status" value="@status" id="@inputId" @(isChecked ? "checked" : null) />
                            <label class="form-check-label" for="@inputId">@status</label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <label class="form-label fw-semibold" for="fromDate">From</label>
                <input id="fromDate" class="form-control" type="date" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-6 col-lg-3">
                <label class="form-label fw-semibold" for="toDate">To</label>
                <input id="toDate" class="form-control" type="date" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-12 col-lg-4">
                <label class="form-label fw-semibold" for="buyer">Buyer</label>
                <input id="buyer" class="form-control" type="text" name="Buyer" value="@Model.Buyer" placeholder="Name or email" />
                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="missingTracking" name="MissingTrackingOnly" value="true" @(Model.MissingTrackingOnly ? "checked" : null) />
                    <label class="form-check-label" for="missingTracking">Only orders without tracking</label>
                </div>
            </div>
            <div class="col-12 col-lg-2 text-lg-end">
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-primary w-100">Apply</button>
                @if (Model.HasFilters)
                {
                    <a class="btn btn-link text-decoration-none mt-2 w-100" asp-page="./Index">Clear</a>
                }
            </div>
        </form>
    </div>
</div>

@if (Model.Orders.Count == 0)
{
    <div class="alert alert-info">
        @(Model.HasFilters ? "No orders match these filters." : "No orders yet. New orders will appear here once buyers purchase your products.")
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th scope="col">Sub-order</th>
                    <th scope="col">Parent order</th>
                    <th scope="col">Buyer</th>
                    <th scope="col">Placed</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-end">Total</th>
                    <th scope="col" class="text-end">Qty</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    var buyerLabel = string.IsNullOrWhiteSpace(order.BuyerName) ? order.BuyerEmail : order.BuyerName;
                    <tr>
                        <td class="fw-semibold">@order.SubOrderNumber</td>
                        <td>@order.OrderNumber</td>
                        <td>@buyerLabel</td>
                        <td>@order.CreatedOn.ToLocalTime().ToString("g")</td>
                        <td>@order.Status</td>
                        <td class="text-end">@order.GrandTotal.ToString("C")</td>
                        <td class="text-end">@order.TotalQuantity</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Seller/Orders/Details" asp-route-orderId="@order.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Orders pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page(null, new { page = Model.PageNumber - 1, status = Model.StatusFilters, fromDate = Model.FromDate?.ToString("yyyy-MM-dd"), toDate = Model.ToDate?.ToString("yyyy-MM-dd"), buyer = Model.Buyer, missingTrackingOnly = Model.MissingTrackingOnly })">Previous</a>
                </li>
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page(null, new { page = Model.PageNumber + 1, status = Model.StatusFilters, fromDate = Model.FromDate?.ToString("yyyy-MM-dd"), toDate = Model.ToDate?.ToString("yyyy-MM-dd"), buyer = Model.Buyer, missingTrackingOnly = Model.MissingTrackingOnly })">Next</a>
                </li>
            </ul>
        </nav>
    }
}
