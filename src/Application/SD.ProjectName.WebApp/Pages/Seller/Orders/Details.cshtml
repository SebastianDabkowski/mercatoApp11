@page "/Seller/Orders/Details/{orderId:int}"
@model SD.ProjectName.WebApp.Pages.Seller.Orders.DetailsModel
@{
    ViewData["Title"] = "Order details";
}

<h1 class="mb-3">Order details</h1>

@if (Model.Order == null)
{
    <div class="alert alert-warning">Order not found.</div>
}
else
{
    <div class="text-muted mb-2">Parent #@Model.Order.OrderNumber · Sub-order @Model.Order.SubOrderNumber · placed @Model.Order.CreatedOn.ToLocalTime().ToString("g")</div>
    <div class="alert alert-secondary">
        <div class="d-flex justify-content-between">
            <div>
                <div class="fw-semibold">Status: @Model.Order.Status</div>
                @if (!string.IsNullOrWhiteSpace(Model.Order.TrackingNumber))
                {
                    <div class="text-muted small">Tracking: @Model.Order.TrackingNumber</div>
                }
                @if (Model.Order.RefundedAmount > 0)
                {
                    <div class="text-danger small">Refunded: @Model.Order.RefundedAmount.ToString("C")</div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Order.PaymentReference))
                {
                    <div class="text-muted small">Payment ref: @Model.Order.PaymentReference</div>
                }
                <div class="text-muted small">Payment status: @Model.Order.PaymentStatus</div>
                <div class="text-muted small">Paid with: @Model.Order.PaymentMethodLabel</div>
            </div>
            <div class="text-end">
                <div class="fw-semibold">@Model.Order.GrandTotal.ToString("C")</div>
                <div class="text-muted small">@Model.Order.TotalQuantity item(s)</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">Items</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Item</th>
                                    <th scope="col" class="text-end">Qty</th>
                                    <th scope="col" class="text-end">Unit</th>
                                    <th scope="col" class="text-end">Tax</th>
                                    <th scope="col" class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    var lineBase = item.UnitPrice * item.Quantity;
                                    var taxes = Math.Max(0, item.LineTotal - lineBase);
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@item.Name</div>
                                            @if (!string.IsNullOrWhiteSpace(item.Variant))
                                            {
                                                <div class="text-muted small">@item.Variant</div>
                                            }
                                        </td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end">@taxes.ToString("C")</td>
                                        <td class="text-end">@item.LineTotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">Shipping</div>
                <div class="card-body">
                    <div class="fw-semibold">@Model.Order.Shipping.MethodLabel</div>
                    <div>@Model.Order.Shipping.Cost.ToString("C")</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.Shipping.Description))
                    {
                        <div class="text-muted small">Instructions: @Model.Order.Shipping.Description</div>
                    }
                    else
                    {
                        <div class="text-muted small">No delivery instructions provided.</div>
                    }
                    <hr />
                    <div class="fw-semibold">Delivery address</div>
                    <div>@Model.Order.Address.Recipient</div>
                    <div>@Model.Order.Address.Line1</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.Address.Line2))
                    {
                        <div>@Model.Order.Address.Line2</div>
                    }
                    <div>@Model.Order.Address.City @Model.Order.Address.State @Model.Order.Address.PostalCode</div>
                    <div>@Model.Order.Address.Country</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.Address.Phone))
                    {
                        <div class="text-muted small">Phone: @Model.Order.Address.Phone</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header">Status</div>
                <div class="card-body">
                    <div class="fw-semibold mb-2">Current: @Model.Order.Status</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.TrackingNumber))
                    {
                        <div class="text-muted small mb-2">Tracking: @Model.Order.TrackingNumber</div>
                    }
                    @if (Model.Order.RefundedAmount > 0)
                    {
                        <div class="text-danger small mb-2">Refunded: @Model.Order.RefundedAmount.ToString("C")</div>
                    }
                    @if (Model.NextStatuses.Count == 0)
                    {
                        <div class="text-muted small">No further status changes are allowed.</div>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Status" asp-route-orderId="@Model.Order.Id">
                            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                            <div class="mb-2">
                                <label class="form-label form-label-sm" asp-for="NewStatus">Next status</label>
                                <select asp-for="NewStatus" class="form-select form-select-sm">
                                    <option value="">Select...</option>
                                    @foreach (var status in Model.NextStatuses)
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                                <span asp-validation-for="NewStatus" class="text-danger small"></span>
                            </div>
                            <div class="mb-2">
                                <label class="form-label form-label-sm" asp-for="TrackingNumber">Tracking (optional)</label>
                                <input asp-for="TrackingNumber" class="form-control form-control-sm" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label form-label-sm" asp-for="RefundedAmount">Refunded amount</label>
                                <input asp-for="RefundedAmount" class="form-control form-control-sm" type="number" step="0.01" min="0" />
                                <div class="form-text">Provide when setting status to Refunded.</div>
                            </div>
                            <button type="submit" class="btn btn-sm btn-primary">Update status</button>
                        </form>
                    }
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">Buyer contact</div>
                <div class="card-body">
                    <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(Model.Order.BuyerName) ? Model.Order.BuyerName : "Buyer")</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.BuyerEmail))
                    {
                        <div class="text-muted small">Email: <a href="mailto:@Model.Order.BuyerEmail">@Model.Order.BuyerEmail</a></div>
                    }
                    else
                    {
                        <div class="text-muted small">Email not provided.</div>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Order.BuyerPhone))
                    {
                        <div class="text-muted small">Phone: @Model.Order.BuyerPhone</div>
                    }
                    else
                    {
                        <div class="text-muted small">Phone not provided.</div>
                    }
                </div>
            </div>
            <div class="card">
                <div class="card-header">Totals</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items subtotal</span>
                        <span>@Model.Order.ItemsSubtotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span>@Model.Order.ShippingTotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 @(Model.Order.DiscountTotal > 0 ? string.Empty : "d-none")">
                        <span>Discount</span>
                        <span>-@Model.Order.DiscountTotal.ToString("C")</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong>@Model.Order.GrandTotal.ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-page="/Seller/Orders/Index">Back to orders</a>
</div>
