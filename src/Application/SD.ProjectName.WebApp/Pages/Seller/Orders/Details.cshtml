@page "/Seller/Orders/Details/{orderId:int}"
@model SD.ProjectName.WebApp.Pages.Seller.Orders.DetailsModel
@{
    ViewData["Title"] = "Order details";
}

<h1 class="mb-3">Order details</h1>

@if (Model.Order == null)
{
    <div class="alert alert-warning">Order not found.</div>
}
else
{
    <div class="text-muted mb-2">Parent #@Model.Order.OrderNumber · Sub-order @Model.Order.SubOrderNumber · placed @Model.Order.CreatedOn.ToLocalTime().ToString("g")</div>
    <div class="alert alert-secondary">
        <div class="d-flex justify-content-between">
            <div>
                <div class="fw-semibold">Status: @Model.Order.Status</div>
                @if (!string.IsNullOrWhiteSpace(Model.Order.PaymentReference))
                {
                    <div class="text-muted small">Payment ref: @Model.Order.PaymentReference</div>
                }
                <div class="text-muted small">Paid with: @Model.Order.PaymentMethodLabel</div>
            </div>
            <div class="text-end">
                <div class="fw-semibold">@Model.Order.GrandTotal.ToString("C")</div>
                <div class="text-muted small">@Model.Order.TotalQuantity item(s)</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">Items</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Item</th>
                                    <th scope="col" class="text-end">Qty</th>
                                    <th scope="col" class="text-end">Unit</th>
                                    <th scope="col" class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@item.Name</div>
                                            @if (!string.IsNullOrWhiteSpace(item.Variant))
                                            {
                                                <div class="text-muted small">@item.Variant</div>
                                            }
                                        </td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end">@item.LineTotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">Shipping</div>
                <div class="card-body">
                    <div class="fw-semibold">@Model.Order.Shipping.MethodLabel</div>
                    <div>@Model.Order.Shipping.Cost.ToString("C")</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.Shipping.Description))
                    {
                        <div class="text-muted small">@Model.Order.Shipping.Description</div>
                    }
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-header">Delivery address</div>
                <div class="card-body">
                    <div class="fw-semibold">@Model.Order.Address.Recipient</div>
                    <div>@Model.Order.Address.Line1</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.Address.Line2))
                    {
                        <div>@Model.Order.Address.Line2</div>
                    }
                    <div>@Model.Order.Address.City @Model.Order.Address.State @Model.Order.Address.PostalCode</div>
                    <div>@Model.Order.Address.Country</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Order.Address.Phone))
                    {
                        <div class="text-muted">Phone: @Model.Order.Address.Phone</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">Totals</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items subtotal</span>
                        <span>@Model.Order.ItemsSubtotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span>@Model.Order.ShippingTotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 @(Model.Order.DiscountTotal > 0 ? string.Empty : "d-none")">
                        <span>Discount</span>
                        <span>-@Model.Order.DiscountTotal.ToString("C")</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong>@Model.Order.GrandTotal.ToString("C")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a class="btn btn-outline-secondary" asp-page="/Seller/Orders/Index">Back to orders</a>
</div>
