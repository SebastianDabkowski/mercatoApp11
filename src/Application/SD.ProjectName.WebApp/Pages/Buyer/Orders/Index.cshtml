@page
@model SD.ProjectName.WebApp.Pages.Buyer.Orders.IndexModel
@{
    ViewData["Title"] = "My orders";
}

<h1 class="mb-3">My orders</h1>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12 col-lg-4">
                <label class="form-label fw-semibold">Status</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var status in Model.AvailableStatuses)
                    {
                        var inputId = $"status-{status.ToLower()}";
                        var isChecked = Model.StatusFilters.Any(s => s.Equals(status, StringComparison.OrdinalIgnoreCase));
                        <div class="form-check me-2">
                            <input class="form-check-input" type="checkbox" name="status" value="@status" id="@inputId" @(isChecked ? "checked" : null) />
                            <label class="form-check-label" for="@inputId">@status</label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-6 col-lg-2">
                <label class="form-label fw-semibold" for="fromDate">From</label>
                <input id="fromDate" class="form-control" type="date" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-6 col-lg-2">
                <label class="form-label fw-semibold" for="toDate">To</label>
                <input id="toDate" class="form-control" type="date" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-12 col-lg-3">
                <label class="form-label fw-semibold" for="sellerId">Seller</label>
                <select id="sellerId" class="form-select" name="SellerId">
                    <option value="">All sellers</option>
                    @foreach (var seller in Model.SellerOptions)
                    {
                        <option value="@seller.Id" selected="@(string.Equals(Model.SellerId, seller.Id, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                            @seller.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-12 col-lg-1 text-lg-end">
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-primary w-100">Apply</button>
                @if (Model.HasFilters)
                {
                    <a class="btn btn-link text-decoration-none mt-2 w-100" asp-page="./Index">Clear</a>
                }
            </div>
        </form>
    </div>
</div>

@if (Model.Orders.Count == 0)
{
    <div class="alert alert-info">
        @(Model.HasFilters ? "No orders match these filters." : "You have no orders yet.")
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th scope="col">Order</th>
                    <th scope="col">Placed</th>
                    <th scope="col" class="text-end">Items</th>
                    <th scope="col" class="text-end">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td class="fw-semibold">@order.OrderNumber</td>
                        <td>@order.CreatedOn.ToLocalTime().ToString("g")</td>
                        <td class="text-end">@order.TotalQuantity</td>
                        <td class="text-end">@order.GrandTotal.ToString("C")</td>
                        <td>@order.Status</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Buyer/Orders/Details" asp-route-orderId="@order.Id">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Orders pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page(null, new { page = Model.PageNumber - 1, status = Model.StatusFilters, fromDate = Model.FromDate?.ToString("yyyy-MM-dd"), toDate = Model.ToDate?.ToString("yyyy-MM-dd"), sellerId = Model.SellerId })">Previous</a>
                </li>
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page(null, new { page = Model.PageNumber + 1, status = Model.StatusFilters, fromDate = Model.FromDate?.ToString("yyyy-MM-dd"), toDate = Model.ToDate?.ToString("yyyy-MM-dd"), sellerId = Model.SellerId })">Next</a>
                </li>
            </ul>
        </nav>
    }
}
