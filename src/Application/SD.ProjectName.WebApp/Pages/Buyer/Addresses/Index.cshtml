@page
@using SD.ProjectName.WebApp.Pages.Buyer.Addresses
@model IndexModel
@{
    ViewData["Title"] = "Shipping addresses";
}

<h1 class="mb-3">Shipping addresses</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="text-muted mb-0">Manage delivery locations you can reuse during checkout.</p>
    <a class="btn btn-primary" asp-page="./Add">Add address</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

@if (!Model.Addresses.Any())
{
    <div class="alert alert-secondary">
        You haven't saved any shipping addresses yet. Add one to speed up checkout.
    </div>
}
else
{
    <div class="row">
        @foreach (var address in Model.Addresses)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <strong>@address.Recipient</strong>
                                @if (address.IsDefault)
                                {
                                    <span class="badge bg-primary ms-2">Default</span>
                                }
                            </div>
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary" asp-page="./Edit" asp-route-id="@address.Id">Edit</a>
                                <form method="post" asp-page-handler="Default" class="ms-1">
                                    <input type="hidden" name="id" value="@address.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary" @(address.IsDefault ? "disabled" : null)>Make default</button>
                                </form>
                            </div>
                        </div>
                        <div class="text-muted small mt-2">
                            <div>@address.Line1</div>
                            @if (!string.IsNullOrWhiteSpace(address.Line2))
                            {
                                <div>@address.Line2</div>
                            }
                            <div>@address.PostalCode @address.City</div>
                            @if (!string.IsNullOrWhiteSpace(address.State))
                            {
                                <div>@address.State</div>
                            }
                            <div>@address.Country</div>
                            @if (!string.IsNullOrWhiteSpace(address.Phone))
                            {
                                <div>Phone: @address.Phone</div>
                            }
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <a class="btn btn-sm btn-outline-primary" asp-page="./Edit" asp-route-id="@address.Id">Edit</a>
                        <form method="post" asp-page-handler="Delete" class="ms-2" onsubmit="return confirm('Delete this address?');">
                            <input type="hidden" name="id" value="@address.Id" />
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger"
                                    title="@(address.CanDelete ? null : "This address is being used in an active order.")"
                                    @(address.CanDelete ? null : "disabled")>Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
