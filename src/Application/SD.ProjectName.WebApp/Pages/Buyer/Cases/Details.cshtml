@page "/Buyer/Cases/Details/{caseId?}"
@model SD.ProjectName.WebApp.Pages.Buyer.Cases.DetailsModel
@{
    ViewData["Title"] = "Case details";
}

<h1 class="mb-3">Case details</h1>

@if (Model.Case == null)
{
    <div class="alert alert-warning">Case not found.</div>
}
else
{
    var summary = Model.Case.Summary;
    <div class="alert alert-secondary d-flex justify-content-between align-items-center">
        <div>
            <div class="fw-semibold">Case @summary.CaseId</div>
            <div class="text-muted small">Opened @summary.RequestedOn.ToLocalTime().ToString("f")</div>
        </div>
        <div class="text-end">
            <span class="badge bg-primary">@summary.Status</span>
            <div class="text-muted small mt-1">@summary.Type</div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">Request details</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Order</dt>
                        <dd class="col-sm-9">
                            <div class="fw-semibold">@summary.OrderNumber</div>
                            <div class="text-muted small">Sub-order @summary.SubOrderNumber</div>
                            <a class="btn btn-link btn-sm ps-0" asp-page="/Buyer/Orders/Details" asp-route-orderId="@summary.OrderId">View order</a>
                        </dd>
                        <dt class="col-sm-3">Seller</dt>
                        <dd class="col-sm-9">@summary.SellerName</dd>
                        <dt class="col-sm-3">Reason</dt>
                        <dd class="col-sm-9">@Model.Case.Reason</dd>
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Case.Description) ? Model.Case.Description : "No additional description provided.")</dd>
                        <dt class="col-sm-3">Items</dt>
                        <dd class="col-sm-9">
                            <ul class="mb-0">
                                @foreach (var item in Model.Case.Items)
                                {
                                    <li>@item.Quantity x @item.Label (Product #@item.ProductId)</li>
                                }
                            </ul>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span>Messaging thread</span>
                    <span class="text-muted small">Updated @Model.Case.Summary.LastUpdatedOn.ToLocalTime().ToString("g")</span>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                    @if (Model.HasMessages)
                    {
                        <ul class="list-unstyled mb-3">
                            @foreach (var message in Model.Case!.Messages)
                            {
                                <li class="mb-3">
                                    <div class="small text-muted">@message.SentOn.ToLocalTime().ToString("g") — @message.Actor</div>
                                    <div class="border rounded p-2">@message.Message</div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted">No messages yet. Keep the conversation in this case to share updates.</div>
                    }
                    <hr />
                    <form method="post" asp-page-handler="Message">
                        <input type="hidden" asp-for="CaseId" value="@summary.CaseId" />
                        <div class="mb-3">
                            <label class="form-label form-label-sm fw-semibold" asp-for="MessageBody">New message</label>
                            <textarea asp-for="MessageBody" class="form-control" rows="3" placeholder="Write an update without sharing phone numbers or email addresses."></textarea>
                            <span asp-validation-for="MessageBody" class="text-danger small"></span>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-sm btn-primary">Send message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-header">Resolution</div>
                <div class="card-body">
                    <div class="fw-semibold mb-1">@Model.Case.Resolution.Outcome</div>
                    <div class="text-muted small mb-2">@Model.Case.Resolution.Summary</div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Refunded</span>
                        <span class="fw-semibold">@Model.Case.Resolution.RefundedAmount.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted small">Sub-order total</span>
                        <span class="text-muted small">@Model.Case.Resolution.SubOrderTotal.ToString("C")</span>
                    </div>
                    <div class="text-muted small mt-2">Payment status: @Model.Case.Resolution.PaymentStatus</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Case.Resolution.PaymentReference))
                    {
                        <div class="text-muted small">Payment/refund ref: @Model.Case.Resolution.PaymentReference</div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">Status history</div>
                <div class="card-body">
                    @if (Model.Case.StatusHistory.Count == 0)
                    {
                        <div class="text-muted">No history available.</div>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0 small">
                            @foreach (var entry in Model.Case.StatusHistory)
                            {
                                <li class="text-muted mb-1">
                                    @entry.ChangedOn.ToLocalTime().ToString("g"): @entry.Status
                                    @if (!string.IsNullOrWhiteSpace(entry.TrackingNumber))
                                    {
                                        <span class="ms-1">• Tracking: @entry.TrackingNumber</span>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(entry.TrackingCarrier))
                                    {
                                        <span class="ms-1">(@entry.TrackingCarrier)</span>
                                    }
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
}
