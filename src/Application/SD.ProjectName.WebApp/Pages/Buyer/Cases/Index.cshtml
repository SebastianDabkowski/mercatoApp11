@page
@model SD.ProjectName.WebApp.Pages.Buyer.Cases.IndexModel
@{
    ViewData["Title"] = "Returns & complaints";
}

<h1 class="mb-3">Returns & complaints</h1>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-12 col-lg-6">
                <label class="form-label fw-semibold">Status</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var status in Model.AvailableStatuses)
                    {
                        var inputId = $"status-{status.Replace(" ", "-").ToLower()}";
                        var isChecked = Model.StatusFilters.Any(s => s.Equals(status, StringComparison.OrdinalIgnoreCase));
                        <div class="form-check me-2">
                            <input class="form-check-input" type="checkbox" name="status" value="@status" id="@inputId" @(isChecked ? "checked" : null) />
                            <label class="form-check-label" for="@inputId">@status</label>
                        </div>
                    }
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <label class="form-label fw-semibold" for="fromDate">From</label>
                <input id="fromDate" class="form-control" type="date" name="FromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-6 col-lg-3">
                <label class="form-label fw-semibold" for="toDate">To</label>
                <input id="toDate" class="form-control" type="date" name="ToDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-12 text-lg-end">
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-primary">Apply</button>
                @if (Model.HasFilters)
                {
                    <a class="btn btn-link text-decoration-none ms-2" asp-page="./Index">Clear</a>
                }
            </div>
        </form>
    </div>
</div>

@if (Model.Cases.Count == 0)
{
    <div class="alert alert-info">
        @(Model.HasFilters ? "No cases match these filters." : "You have no return or complaint cases yet.")
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th scope="col">Case</th>
                    <th scope="col">Order</th>
                    <th scope="col">Seller</th>
                    <th scope="col">Type</th>
                    <th scope="col">Opened</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="text-end">Refunded</th>
                    <th scope="col" class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cases)
                {
                    <tr>
                        <td class="fw-semibold">@item.CaseId</td>
                        <td>
                            <div class="fw-semibold">@item.OrderNumber</div>
                            <div class="text-muted small">Sub-order @item.SubOrderNumber</div>
                        </td>
                        <td>@item.SellerName</td>
                        <td>@item.Type</td>
                        <td>@item.RequestedOn.ToLocalTime().ToString("g")</td>
                        <td>@item.Status</td>
                        <td class="text-end">@item.RefundedAmount.ToString("C")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Buyer/Cases/Details" asp-route-caseId="@item.CaseId">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Case pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page(null, new { page = Model.PageNumber - 1, status = Model.StatusFilters, fromDate = Model.FromDate?.ToString("yyyy-MM-dd"), toDate = Model.ToDate?.ToString("yyyy-MM-dd") })">Previous</a>
                </li>
                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Page(null, new { page = Model.PageNumber + 1, status = Model.StatusFilters, fromDate = Model.FromDate?.ToString("yyyy-MM-dd"), toDate = Model.ToDate?.ToString("yyyy-MM-dd") })">Next</a>
                </li>
            </ul>
        </nav>
    }
}
