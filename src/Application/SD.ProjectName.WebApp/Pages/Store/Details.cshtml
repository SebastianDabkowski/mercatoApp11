@page "/store/{storeSlug}"
@model SD.ProjectName.WebApp.Pages.Store.DetailsModel
@{
    ViewData["Title"] = Model.Store?.Name ?? "Store";
}

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-warning" role="alert">
        @Model.StatusMessage
    </div>
}

@if (Model.Store != null && Model.IsPubliclyVisible)
{
    <div class="row">
        <div class="col-md-8">
            <h1 class="display-6">@Model.Store?.Name</h1>
            <div class="d-flex flex-column gap-1 mb-3">
                <div class="d-flex align-items-center gap-2">
                    @if (Model.Store?.AverageRating != null)
                    {
                        <span class="badge bg-warning text-dark">@Model.Store.AverageRating?.ToString("0.0")/5</span>
                        <span class="text-muted small">@Model.Store.RatedOrderCount @((Model.Store.RatedOrderCount == 1) ? "rated order" : "rated orders")</span>
                    }
                    else
                    {
                        <span class="text-muted small">No ratings yet</span>
                    }
                </div>
                <div class="d-flex align-items-center gap-2">
                    <span class="badge bg-primary">Reputation: @Model.Store?.ReputationLabel</span>
                    <span class="text-muted small">Score @Model.Store?.ReputationScore.ToString("0")/100</span>
                </div>
                <div class="text-muted small">
                    On-time shipping @Model.Store?.OnTimeShippingRate.ToString("P0") · Disputes @Model.Store?.DisputeRate.ToString("P0") · Cancellations @Model.Store?.CancellationRate.ToString("P0")
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Store?.LogoPath))
            {
                <img src="@Model.Store!.LogoPath" alt="@Model.Store.Name logo" class="img-fluid rounded border mb-3" />
            }
            <p class="lead">@Model.Store?.Description</p>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h6">Contact</h2>
                    <ul class="list-unstyled mb-0">
                        <li><strong>Email:</strong> <a href="mailto:@Model.Store?.ContactEmail">@Model.Store?.ContactEmail</a></li>
                        @if (!string.IsNullOrEmpty(Model.Store?.ContactPhone))
                        {
                            <li><strong>Phone:</strong> @Model.Store!.ContactPhone</li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Store?.ContactWebsite))
                        {
                            <li><strong>Website:</strong> <a href="@Model.Store!.ContactWebsite" target="_blank" rel="noopener">@Model.Store.ContactWebsite</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <section class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h2 class="h5 mb-0">Products</h2>
            <a class="btn btn-outline-primary btn-sm" asp-page="/Products/List">View all products</a>
        </div>
        @if (Model.ProductPreview.Any())
        {
            <div class="row g-3">
                        @foreach (var product in Model.ProductPreview)
                        {
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        <h3 class="h6">@product.Title</h3>
                                        <p class="text-muted small mb-2">@product.Description</p>
                                        <div class="fw-semibold">@product.Price.ToString("C")</div>
                                    </div>
                                </div>
                            </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">This store hasn't listed any products yet.</p>
        }
    </section>
}
else if (Model.Store != null)
{
    <p class="text-muted">This store is not available right now.</p>
}
