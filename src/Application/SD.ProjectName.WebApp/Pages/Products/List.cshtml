@page
@model SD.ProjectName.WebApp.Pages.Products.ListModel
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

@if (Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}