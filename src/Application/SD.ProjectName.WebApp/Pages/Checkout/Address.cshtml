@page "/Checkout/Address"
@model SD.ProjectName.WebApp.Pages.Checkout.AddressModel
@{
    ViewData["Title"] = "Delivery address";
}

<h1 class="mb-4">Delivery address</h1>

@if (TempData["CheckoutAddressSaved"] != null)
{
    <div class="alert alert-success">Address saved for this order.</div>
}

<form method="post" novalidate>
    <div class="row">
        <div class="col-lg-8">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @if (Model.SavedAddresses.Any())
            {
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Saved addresses</span>
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Buyer/Addresses/Index">Manage</a>
                        }
                    </div>
                    <div class="card-body">
                        @foreach (var address in Model.SavedAddresses)
                        {
                            var optionId = $"saved-{address.Key}";
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="Input.SavedAddressKey" id="@optionId" value="@address.Key" @(Model.Input.SavedAddressKey == address.Key ? "checked" : "") />
                                <label class="form-check-label" for="@optionId">
                                    <strong>@address.Label</strong>
                                    @if (address.IsDefault)
                                    {
                                        <span class="badge bg-primary ms-2">Default</span>
                                    }
                                    @if (address.IsProfileAddress)
                                    {
                                        <span class="badge bg-secondary ms-1">Profile</span>
                                    }
                                    <br />
                                    <span class="text-muted">@address.Address.Line1</span>
                                    @if (!string.IsNullOrWhiteSpace(address.Address.City) || !string.IsNullOrWhiteSpace(address.Address.State))
                                    {
                                        <br />
                                        <span class="text-muted">@string.Join(", ", new[] { address.Address.City, address.Address.State }.Where(p => !string.IsNullOrWhiteSpace(p)))</span>
                                    }
                                    <br />
                                    <span class="text-muted">@address.Address.PostalCode @address.Address.Country</span>
                                </label>
                            </div>
                        }
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Input.SavedAddressKey" id="saved-new" value="new" @(string.IsNullOrWhiteSpace(Model.Input.SavedAddressKey) || Model.Input.SavedAddressKey == "new" ? "checked" : "") />
                            <label class="form-check-label" for="saved-new">Use a new address</label>
                        </div>
                    </div>
                </div>
            }

            <div class="card mb-3">
                <div class="card-header">New delivery address</div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.NewAddress.Recipient" class="form-label"></label>
                            <input asp-for="Input.NewAddress.Recipient" class="form-control" autocomplete="name" />
                            <span asp-validation-for="Input.NewAddress.Recipient" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.NewAddress.Phone" class="form-label"></label>
                            <input asp-for="Input.NewAddress.Phone" class="form-control" autocomplete="tel" />
                            <span asp-validation-for="Input.NewAddress.Phone" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Input.NewAddress.Line1" class="form-label"></label>
                            <input asp-for="Input.NewAddress.Line1" class="form-control" autocomplete="address-line1" />
                            <span asp-validation-for="Input.NewAddress.Line1" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Input.NewAddress.Line2" class="form-label"></label>
                            <input asp-for="Input.NewAddress.Line2" class="form-control" autocomplete="address-line2" />
                            <span asp-validation-for="Input.NewAddress.Line2" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.NewAddress.City" class="form-label"></label>
                            <input asp-for="Input.NewAddress.City" class="form-control" autocomplete="address-level2" />
                            <span asp-validation-for="Input.NewAddress.City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.NewAddress.State" class="form-label"></label>
                            <input asp-for="Input.NewAddress.State" class="form-control" autocomplete="address-level1" />
                            <span asp-validation-for="Input.NewAddress.State" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.NewAddress.PostalCode" class="form-label"></label>
                            <input asp-for="Input.NewAddress.PostalCode" class="form-control" autocomplete="postal-code" />
                            <span asp-validation-for="Input.NewAddress.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.NewAddress.Country" class="form-label"></label>
                            <input asp-for="Input.NewAddress.Country" class="form-control" autocomplete="country-name" />
                            <span asp-validation-for="Input.NewAddress.Country" class="text-danger"></span>
                        </div>
                        <div class="col-12 form-check mt-2">
                            <input asp-for="Input.SaveToProfile" class="form-check-input" />
                            <label asp-for="Input.SaveToProfile" class="form-check-label">Save to my profile for next time</label>
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Save and continue</button>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">Order summary</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Items subtotal</span>
                        <span>@Model.Summary.ItemsSubtotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span>@Model.Summary.ShippingTotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2 @(Model.Summary.DiscountTotal > 0 ? "" : "d-none")" id="address-discount-row">
                        <span>Discount <span class="text-muted">@((Model.Summary.AppliedPromoCode ?? string.Empty) == string.Empty ? string.Empty : $"({Model.Summary.AppliedPromoCode})")</span></span>
                        <span>-@Model.Summary.DiscountTotal.ToString("C")</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong>@Model.Summary.GrandTotal.ToString("C")</strong>
                    </div>
                    <div class="text-muted small mt-2">@Model.Summary.TotalQuantity item(s)</div>
                    <div class="mt-3">
                        <label class="form-label" for="promo-code-input">Promo code</label>
                        <div class="input-group">
                            <input type="text" id="promo-code-input" class="form-control" value="@Model.Summary.AppliedPromoCode" placeholder="Enter promo code" />
                            <button type="button" class="btn btn-outline-primary" id="apply-promo-button">Apply</button>
                            <button type="button" class="btn btn-outline-secondary @(string.IsNullOrWhiteSpace(Model.Summary.AppliedPromoCode) ? "d-none" : "")" id="remove-promo-button">Remove</button>
                        </div>
                        <div class="small mt-2 text-danger d-none" id="promo-error"></div>
                        <div class="small mt-2 text-success d-none" id="promo-success"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        (() => {
            const applyButton = document.getElementById('apply-promo-button');
            const removeButton = document.getElementById('remove-promo-button');
            const input = document.getElementById('promo-code-input');
            const promoError = document.getElementById('promo-error');
            const promoSuccess = document.getElementById('promo-success');

            const resetMessages = () => {
                if (promoError) {
                    promoError.classList.add('d-none');
                    promoError.textContent = '';
                }
                if (promoSuccess) {
                    promoSuccess.classList.add('d-none');
                    promoSuccess.textContent = '';
                }
            };

            const handleResponse = (result) => {
                resetMessages();
                if (!result) {
                    if (promoError) {
                        promoError.textContent = 'Could not apply promo code.';
                        promoError.classList.remove('d-none');
                    }
                    return;
                }

                if (result.success) {
                    if (promoSuccess) {
                        promoSuccess.textContent = result.message || 'Promo code applied.';
                        promoSuccess.classList.remove('d-none');
                    }
                    window.location.reload();
                } else if (promoError) {
                    promoError.textContent = result.message || 'Promo code could not be applied.';
                    promoError.classList.remove('d-none');
                }
            };

            applyButton?.addEventListener('click', () => {
                resetMessages();
                const code = input?.value ?? '';
                fetch('/Api/Promo?handler=Apply', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code })
                })
                    .then(r => r.json().catch(() => ({})))
                    .then(handleResponse)
                    .catch(() => handleResponse(null));
            });

            removeButton?.addEventListener('click', () => {
                resetMessages();
                fetch('/Api/Promo?handler=Remove', { method: 'POST' })
                    .then(r => r.json().catch(() => ({})))
                    .then(handleResponse)
                    .catch(() => handleResponse(null));
            });
        })();
    </script>
}
