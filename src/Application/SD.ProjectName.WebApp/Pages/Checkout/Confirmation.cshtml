@page "/Checkout/Confirmation/{orderId:int?}"
@model SD.ProjectName.WebApp.Pages.Checkout.ConfirmationModel
@{
    ViewData["Title"] = "Order confirmed";
}

<h1 class="mb-3">Order confirmed</h1>
@if (Model.Order != null)
{
    <div class="text-muted mb-2">Order #@Model.Order.OrderNumber Â· placed @Model.Order.CreatedOn.ToLocalTime().ToString("d")</div>
}

<div class="alert alert-success">
    <strong>Payment confirmed.</strong> Your order is being prepared.
    @if (!string.IsNullOrWhiteSpace(Model.PaymentReference))
    {
        <div class="small text-muted">Reference: @Model.PaymentReference</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.PaymentMethodLabel))
    {
        <div class="small text-muted">Paid with: @Model.PaymentMethodLabel</div>
    }
    @if (Model.Order != null)
    {
        <div class="small text-muted">Status: @Model.Order.Status</div>
    }
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-3">
            <div class="card-header">Items</div>
            <div class="card-body">
                @if (Model.Order?.SubOrders != null && Model.Order.SubOrders.Count > 0)
                {
                    foreach (var sub in Model.Order.SubOrders)
                    {
                        <div class="border rounded p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <div class="fw-semibold">@sub.SellerName</div>
                                    <div class="text-muted small">Sub-order @sub.SubOrderNumber</div>
                                    <div class="text-muted small">Shipping: @sub.ShippingDetail.MethodLabel (@sub.ShippingDetail.Cost.ToString("C"))</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-semibold">@sub.GrandTotal.ToString("C")</div>
                                    <div class="text-muted small">@sub.TotalQuantity item(s)</div>
                                    @if (sub.DiscountTotal > 0)
                                    {
                                        <div class="text-success small">Discount -@sub.DiscountTotal.ToString("C")</div>
                                    }
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">Item</th>
                                            <th scope="col" class="text-end">Qty</th>
                                            <th scope="col" class="text-end">Unit</th>
                                            <th scope="col" class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in sub.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="fw-semibold">@item.Name</div>
                                                    @if (!string.IsNullOrWhiteSpace(item.Variant))
                                                    {
                                                        <div class="text-muted small">@item.Variant</div>
                                                    }
                                                </td>
                                                <td class="text-end">@item.Quantity</td>
                                                <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                                <td class="text-end">@item.LineTotal.ToString("C")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
                else if (Model.Order?.Items != null && Model.Order.Items.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">Item</th>
                                    <th scope="col">Seller</th>
                                    <th scope="col" class="text-end">Qty</th>
                                    <th scope="col" class="text-end">Unit</th>
                                    <th scope="col" class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@item.Name</div>
                                            @if (!string.IsNullOrWhiteSpace(item.Variant))
                                            {
                                                <div class="text-muted small">@item.Variant</div>
                                            }
                                        </td>
                                        <td>@item.SellerName</td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end">@item.LineTotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-muted">Item details are not available.</div>
                }
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header">Shipping</div>
            <div class="card-body">
                @if (Model.Order?.SubOrders != null && Model.Order.SubOrders.Count > 0)
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var sub in Model.Order.SubOrders)
                        {
                            <li class="mb-2">
                                <div class="fw-semibold">@sub.SellerName <span class="text-muted small">(Sub-order @sub.SubOrderNumber)</span></div>
                                <div>@sub.ShippingDetail.MethodLabel (@sub.ShippingDetail.Cost.ToString("C"))</div>
                                @if (!string.IsNullOrWhiteSpace(sub.ShippingDetail.Description))
                                {
                                    <div class="text-muted small">Estimated: @sub.ShippingDetail.Description</div>
                                }
                            </li>
                        }
                    </ul>
                }
                else if (Model.Order?.Shipping != null && Model.Order.Shipping.Count > 0)
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var shipping in Model.Order.Shipping)
                        {
                            <li class="mb-2">
                                <div class="fw-semibold">@shipping.SellerName</div>
                                <div>@shipping.MethodLabel (@shipping.Cost.ToString("C"))</div>
                                @if (!string.IsNullOrWhiteSpace(shipping.Description))
                                {
                                    <div class="text-muted small">Estimated: @shipping.Description</div>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted">Shipping selections are not available.</div>
                }
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header">Delivery address</div>
            <div class="card-body">
                @if (Model.Address != null)
                {
                    <div class="fw-semibold">@Model.Address.Recipient</div>
                    <div>@Model.Address.Line1</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Address.Line2))
                    {
                        <div>@Model.Address.Line2</div>
                    }
                    <div>@Model.Address.City @Model.Address.State @Model.Address.PostalCode</div>
                    <div>@Model.Address.Country</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Address.Phone))
                    {
                        <div class="text-muted">Phone: @Model.Address.Phone</div>
                    }
                }
                else
                {
                    <div class="text-muted">Address not available.</div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">Order summary</div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Items subtotal</span>
                    <span>@Model.Summary.ItemsSubtotal.ToString("C")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Shipping</span>
                    <span>@Model.Summary.ShippingTotal.ToString("C")</span>
                </div>
                <div class="d-flex justify-content-between mb-2 @(Model.Summary.DiscountTotal > 0 ? "" : "d-none")">
                    <span>Discount <span class="text-muted">@((Model.Summary.AppliedPromoCode ?? string.Empty) == string.Empty ? string.Empty : $"({Model.Summary.AppliedPromoCode})")</span></span>
                    <span>-@Model.Summary.DiscountTotal.ToString("C")</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between">
                    <strong>Total</strong>
                    <strong>@Model.Summary.GrandTotal.ToString("C")</strong>
                </div>
                <div class="text-muted small mt-2">@Model.Summary.TotalQuantity item(s)</div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" href="/Products/List">Continue shopping</a>
</div>
