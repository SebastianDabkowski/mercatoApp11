@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@using SD.ProjectName.WebApp.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject IAuthorizationService AuthorizationService

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var buyerAccess = (await AuthorizationService.AuthorizeAsync(User, null, Permissions.BuyerPortal)).Succeeded;
    var sellerAccess = (await AuthorizationService.AuthorizeAsync(User, null, Permissions.SellerWorkspace)).Succeeded;
    var adminAccess = (await AuthorizationService.AuthorizeAsync(User, null, Permissions.AdminDashboard)).Succeeded;
    var complianceAccess = (await AuthorizationService.AuthorizeAsync(User, null, Permissions.ComplianceRegistry)).Succeeded;
    if (buyerAccess)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Buyer/Orders/Index">Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Buyer/Cases/Index">Returns &amp; complaints</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Buyer/Addresses/Index">Addresses</a>
        </li>
    }
    if (sellerAccess)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Seller/Orders/Index">Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Seller/Reports/Orders">Reports</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Seller/Cases/Index">Returns &amp; complaints</a>
        </li>
    }
    if (adminAccess)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Dashboard">Admin</a>
        </li>
    }
    if (complianceAccess)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Compliance/ProcessingRegistry">Processing registry</a>
        </li>
    }
    <li class="nav-item">
        @await Component.InvokeAsync("NotificationBell")
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/ChangePassword" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
