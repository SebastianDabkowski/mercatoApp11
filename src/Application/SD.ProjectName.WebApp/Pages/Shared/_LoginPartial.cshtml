@using Microsoft.AspNetCore.Identity
@using SD.ProjectName.WebApp.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);
    if (currentUser?.AccountType == AccountTypes.Buyer)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Buyer/Orders/Index">Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Buyer/Cases/Index">Returns &amp; complaints</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Buyer/Addresses/Index">Addresses</a>
        </li>
    }
    if (currentUser?.AccountType == AccountTypes.Seller)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Seller/Orders/Index">Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Seller/Cases/Index">Returns &amp; complaints</a>
        </li>
    }
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/ChangePassword" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
