@page
@model SD.ProjectName.WebApp.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<h1>@ViewData["Title"]</h1>

@if (Model.LinkInvalid)
{
    <div class="alert alert-danger">
        <p class="mb-1">This reset link is invalid or has expired.</p>
        <a class="alert-link" asp-page="./ForgotPassword">Request a new link</a>.
    </div>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <h2>Choose a new password</h2>
                <p class="text-muted">We will invalidate all active sessions once your password is reset.</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input type="hidden" asp-for="Input.Code" />
                <input type="hidden" asp-for="Input.UserId" />
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="email" readonly />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Reset password</button>
            </form>
        </div>
        <div class="col-md-6">
            <section>
                <h3>Reset link tips</h3>
                <p>For your security, reset links can be used only once. If the link stops working, <a asp-page="./ForgotPassword">request a fresh link</a>.</p>
                <p>After you reset your password, any existing sign-ins will be invalidated and you will need to log in again.</p>
            </section>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
