@page
@model SD.ProjectName.WebApp.Areas.Identity.Pages.Account.LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<h1 class="mb-3">Two-factor authentication</h1>
<p class="text-muted">Enter the verification code we emailed to you.</p>

<div class="row">
    <div class="col-md-6">
        <section>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" />
                    <label asp-for="Input.Code" class="form-label"></label>
                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="Input.RememberMachine" class="form-check-input" />
                    <label asp-for="Input.RememberMachine" class="form-check-label"></label>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="RememberMe" />
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
